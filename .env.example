CLICKHOUSE_DATABASE=trade
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=

# Redis Configuration (SEPARATE for nyyu-market)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
